# Core Metrics Plus AI Configuration

# Project Configuration
project:
  name: "Core Metrics Plus"
  type: "wordpress-plugin"
  version_file: "core-metrics-plus.php"
  changelog_file: "docs/CHANGELOG.md"
  documentation_root: "docs/"

# Git Workflow Settings
git:
  commit_types:
    - feat     # New features
    - fix      # Bug fixes
    - docs     # Documentation changes
    - style    # Code style changes
    - refactor # Code refactoring
    - test     # Adding/modifying tests
    - chore    # Maintenance tasks
  workflow:
    add_all: false  # Never use 'git add .'
    status_first: true  # Always check status before changes
    atomic_commits: true  # One feature/fix per commit

# WordPress Plugin Settings
wordpress:
  min_version: "5.0"
  php_min_version: "7.4"
  text_domain: "core-metrics-plus"
  function_prefix: "cmp_"
  class_prefix: "CMP_"

# Release Process
release:
  zip_exclusions:
    - ".*"
    - "__MACOSX"
    - "node_modules"
    - "tests"
  version_update_files:
    - "core-metrics-plus.php:header"
    - "core-metrics-plus.php:CMP_VERSION"
    - "docs/CHANGELOG.md"
  zip_command: "zip -r assets/core-metrics-plus-[VERSION].zip . -x \".*\" -x \"__MACOSX\""

# Code Standards
standards:
  php:
    style: "WordPress-Core"
    compatibility: "7.4+"
  js:
    format: "prettier"
    standard: "wordpress"

# Documentation Requirements
docs:
  required_files:
    - "README.md"
    - "docs/CHANGELOG.md"
    - "docs/AI_ASSIST.md"
    - "docs/TESTING.md"
  changelog_format: "Keep a Changelog"
  versioning: "SemVer"

# AI Assistant Behavior
ai_assist:
  primary_docs: "docs/AI_ASSIST.md"
  workflow_docs: "docs/WORKFLOW.md"
  check_files_on_start:
    - ".sudolang"
    - "docs/AI_ASSIST.md"
    - "core-metrics-plus.php"
  prohibited_commands:
    - "git add ."
    - "rm -rf"
  required_checks:
    - "git status before changes"
    - "version numbers match"
    - "changelog updated"
